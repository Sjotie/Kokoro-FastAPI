{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile.cpu"
  },
  "deploy": {
    "runtime": "V2",
    "sleepApplication": false,
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "multiRegionConfig": {
      "europe-west4": {
        "numReplicas": 1
      },
      "us-west2": {
        "numReplicas": 1
      }
    }
  }
}
